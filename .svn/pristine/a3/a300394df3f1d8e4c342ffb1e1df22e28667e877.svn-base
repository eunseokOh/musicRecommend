<!DOCTYPE>
<html lang ="ko">
<head>
<meta charset=UTF-8">
<title>Insert title here</title>
<link rel="stylesheet"
	href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<script src="<c:url value='/resources/js/jquery-2.2.2.js'/>"></script>
<script src="<c:url value='/resources/js/jquery-form.js'/>"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

<script type="text/javascript">
$(document).ready(function(){

		var maxPage = -1;
		var nowPage = -1;
		
			
		var makeHtml = function(key, val){
		
		var button = $("<button />", {
			type : "button",
			text : val.artist_name
		}).addClass('btn btn-link');
		
		
		var p2 = $("<p />", {
			text : val.song_name.substring(0,23)
		});
		
		var strong = $("<strong />", {
			
			text : val.album_name.substring(0,23)
		});
		
		var p1 = $("<p>", {
		}).append(strong);
		
		var img = $("<img>",{
			src : 'http://i.huffpost.com/gen/3722402/thumbs/o-PRINCESS-570.jpg?7'
		});
		
		var thumb = $("<div />",{
		}).append(img).append(p1).append(p2).append(button).addClass('thumbnail');
		
		var sm_4 = $("<div />",{
		}).append(thumb).addClass('col-sm-4');
		
		$('#rtc').append(sm_4);
	};	
		
	
	
	var goAjax = function(page, genre){
		 	var page = page;
		 	var genre = genre;
		 	
				$.ajax({
				url : "chartList/"+genre,
				type : 'post',
				data : {
						page : page
				}
			}).done(function(data){
				this.nowPage = data.pgNation.pg;
				this.maxPage = data.pgNation.total_page_count;
				
				$.each(data.list, function(key,val){
					makeHtml(key, val);
				})
				
			});
		}
	
	goAjax(1, "DP0000");
	
	$(window).scroll(function(){ 
		   if($(window).scrollTop() >= $(document).height() - $(window).height()){
			   
			   if( maxPage >= nowPage ){
				   goAjax(nowPage++, "DP0000");
			   }
			   
		   } 
		});
	
	
});

function changeGenre(genre){
	location.href="../chartList/"+genre;
	
}
</script>
  <style>
